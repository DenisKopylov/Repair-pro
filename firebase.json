{
  "hosting": {
    "public": "apps/frontend/out",         
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",               
        "run": {
          "serviceId": "repair-backend",  
          "region": "europe-west4"
        }
      },
      {
        "source": "**",                    
        "destination": "/index.html"       
      }
    ]
  }
}