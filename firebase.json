{
  "hosting": [
    {
      "target": "frontend",
      "public": "apps/frontend/out",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"]
    },
    {
      "target": "backend",
      "public": "apps/backend",      
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "/api/**",
          "run": {
            "serviceId": "repair-backend",  
            "region": "europe-west4"
          }
        }
      ]
    }
  ]
}